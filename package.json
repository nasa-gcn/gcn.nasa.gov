{
  "private": true,
  "name": "@nasa-gcn/gcn.nasa.gov",
  "description": "General Coordinates Network web site",
  "repository": {
    "type": "git",
    "url": "github:nasa-gcn/gcn.nasa.gov"
  },
  "license": "NASA-1.3",
  "scripts": {
    "build:remix": "remix build",
    "build:sass": "gulp build-sass",
    "build:esbuild": "node esbuild.mjs",
    "build:website": "run-s build:sass build:remix",
    "build": "run-p build:website build:esbuild",
    "dev:remix": "remix watch",
    "dev:arc": "cross-env NODE_ENV=development arc sandbox --host localhost",
    "dev:sass": "gulp watch",
    "dev:esbuild": "node esbuild.mjs --watch",
    "dev": "npm-run-all build:remix --parallel \"dev:*\"",
    "prepare:sass": "gulp init",
    "prepare:husky": "husky install",
    "prepare": "run-p \"prepare:*\"",
    "deploy:hydrate": "arc hydrate",
    "deploy:remove-uswds": "rimraf server/node_modules/@uswds/uswds",
    "deploy:modclean": "modclean -p server -n default:safe,default:caution -a '*.ts,*.map,*.scss,Makefile' --ignore 'makefile*' -r",
    "deploy:arc": "arc deploy --no-hydrate --prune --production",
    "deploy": "run-s deploy:hydrate deploy:remove-uswds deploy:modclean deploy:arc",
    "clean": "rimraf public server/_assets server/index.* server/node_modules email-incoming sam.json sam.yaml .cache"
  },
  "dependencies": {
    "@architect/functions": "^5.3.4",
    "@balavishnuvj/remix-seo": "^1.0.2",
    "@nasa-gcn/architect-functions-search": "^0.0.2",
    "@nasa-gcn/dynamodb-autoincrement": "^0.0.6",
    "@octokit/rest": "^19.0.7",
    "@remix-run/architect": "^1.13.0",
    "@remix-run/node": "^1.13.0",
