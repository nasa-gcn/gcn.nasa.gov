    "@trussworks/react-uswds": "github:lpsinger/react-uswds#gcn",
    "@xmldom/xmldom": "^0.9.6",
    "aws-lambda-ses-forwarder": "^6.0.0",
    "classnames": "^2.5.1",
    "color-convert": "^2.0.1",
